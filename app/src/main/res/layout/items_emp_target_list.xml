<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cardview_lightorange_margined"
        android:backgroundTint="@color/greywhite"
        android:elevation="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/empname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/zonapro_bold"
            android:text="Raja Kumar\nRao"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/emp_target_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empname"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/zonapro_bold"
            android:text="(10)"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/emp_pack_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emp_target_progress"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/zonapro_regular"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="12dp">

        </TextView>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/emp_target_progress"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/emp_target_count"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:indeterminate="false"
            app:indicatorColor="@color/blue"
            app:trackColor="@color/grey"
            app:trackCornerRadius="10dp"
            app:trackThickness="5dp" />

    </RelativeLayout>
    <View
        android:id="@+id/line_centre"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_centerInParent="true"
        android:background="@color/orange">

    </View>
</RelativeLayout>