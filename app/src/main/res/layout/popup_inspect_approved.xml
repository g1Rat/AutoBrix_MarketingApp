<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/zonapro_semibold"
                android:gravity="center"
                android:text="With Cooling Period"
                android:textColor="@color/black"
                android:textSize="18dp">

            </TextView>

            <TextView

                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/view"
                android:fontFamily="@font/zonapro_regular"
                android:gravity="start"
                android:text="Number Of Days"
                android:textColor="@color/black"
                android:textSize="14dp">

            </TextView>
            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true">
            </View>

            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/view"
                android:fontFamily="@font/zonapro_regular"
                android:gravity="center"
                android:text="Kms"
                android:textColor="@color/black"
                android:textSize="14dp">

            </TextView>

            <RelativeLayout

                android:id="@+id/rl_noofdays"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/title1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@+id/view"
                android:background="@color/greywhite"
                android:padding="5dp">

                <TextView

                    android:id="@+id/noof_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/zonapro_semibold"
                    android:text="24"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_kms"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/title1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/view"
                android:background="@color/greywhite"
                android:padding="5dp">

                <TextView
                    android:id="@+id/kms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/zonapro_semibold"
                    android:text="24500 kms"
                    android:textColor="@color/black"
                    android:textSize="16dp">

                </TextView>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_kms">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/greywhite"
                    android:fontFamily="@font/zonapro_semibold"
                    android:gravity="start"
                    android:hint="comments"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="14dp">

                </TextView>
            </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>