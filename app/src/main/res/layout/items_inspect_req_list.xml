<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/greywhite"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/dealer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/zonapro_semibold"
            android:text="Shobu cyril"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/veh_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dealer_name"
            android:fontFamily="@font/poppins_regular"
            android:text="KA01AF1234"
            android:textColor="@color/orange"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/veh_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/zonapro_bold"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>

        <TextView

            android:id="@+id/insp_veh_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/zonapro_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/inspection_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/veh_no"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/zonapro_semibold"
            android:text="12-04-2021"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/label_inspection_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inspection_on"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/zonapro_semibold"
            android:text="Inspection On"
            android:textColor="@color/grey">

        </TextView>

        <TextView
            android:id="@+id/req_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_inspection_on"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/zonapro_semibold"
            android:text="dealer"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/label_req_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/req_by"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/zonapro_semibold"
            android:text="Requested by"
            android:textColor="@color/grey">

        </TextView>

        <TextView
            android:id="@+id/requested_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/veh_no"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/zonapro_semibold"
            android:text="10-01-2021"
            android:textColor="@color/black"
            android:textSize="14dp">

        </TextView>

        <TextView
            android:id="@+id/label_reqon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requested_on"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/zonapro_regular"
            android:text="Requested On"
            android:textColor="@color/grey"
            android:textSize="14dp">

        </TextView>

        <TextView
            android:id="@+id/inspec_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_reqon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/zonapro_semibold"
            android:text="regular inspection"
            android:textColor="@color/blue"
            android:textSize="14dp">

        </TextView>

        <TextView
            android:id="@+id/insp_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inspec_type"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/zonapro_semibold"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="14dp">

        </TextView>
    </RelativeLayout>

</RelativeLayout>